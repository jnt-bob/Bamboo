<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ambition_backgroup">



    <ImageView
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/cancel"></ImageView>

    <ImageView
        android:id="@+id/finish"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/finish"></ImageView>

    <ImageView
        android:id="@+id/xian"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/xian"></ImageView>

    <EditText
        android:id="@+id/ambitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="请输入你的目标"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textColorHint="#FFFFFF"></EditText>

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="85dp"
        android:background="@null"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:hint="结束时间">
    </TextView>

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="85dp"
        android:background="@null"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:hint="开始时间">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="~"></TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="125dp">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:text="0h/天"></TextView>

        <ImageView
            android:id="@+id/every"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/everyday"></ImageView>

        <ListView
            android:id="@+id/evert_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/every"
            android:layout_alignTop="@+id/every"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            ></ListView>


        <View  android:layout_height="4px"
            android:id="@+id/xian2"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/every"
            android:layout_marginLeft="100dp"
            android:background="#82b686"
            android:layout_alignBottom="@+id/evert_listview"
            />

        <ImageView
            android:id="@+id/everyday_jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/evert_listview"
            android:layout_alignBottom="@+id/evert_listview"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/jia"></ImageView>


        <ImageView
            android:id="@+id/everyday_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/everyday_jia"
            android:layout_alignBottom="@+id/everyday_jia"
            android:layout_marginLeft="40dp"
            android:src="@drawable/jian"></ImageView>

        <ImageView
            android:id="@+id/dingyi"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/everyday_jia"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/dingyi">
        </ImageView>

        <ListView
            android:id="@+id/ziding_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dingyi"
            android:layout_alignTop="@+id/dingyi"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            ></ListView>

        <View  android:layout_height="4px"
            android:id="@+id/xian3"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/every"
            android:layout_marginLeft="100dp"
            android:background="#82b686"
            android:layout_alignBottom="@+id/ziding_listview"
            />

        <ImageView
            android:id="@+id/ziding_jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ziding_listview"
            android:layout_alignBottom="@+id/ziding_listview"
            android:layout_marginLeft="105dp"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/jia"></ImageView>


        <ImageView
            android:id="@+id/ziding_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ziding_jia"
            android:layout_alignBottom="@+id/ziding_jia"
            android:layout_marginLeft="40dp"
            android:src="@drawable/jian"></ImageView>



    </RelativeLayout>

</RelativeLayout>